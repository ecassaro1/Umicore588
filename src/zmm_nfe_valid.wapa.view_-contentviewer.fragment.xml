<core:FragmentDefinition                                                                                                                                                                                                                                       
   xmlns="sap.m"                                                                                                                                                                                                                                               
   xmlns:ce="sap.ui.codeeditor"&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                              
   xmlns:core="sap.ui.core" >                                                                                                                                                                                                                                  
   <Dialog                                                                                                                                                                                                                                                     
      title="XML"                                                                                                                                                                                                                                              
      contentWidth="1000px"                                                                                                                                                                                                                                    
   >                                                                                                                                                                                                                                                           
        <beginButton>                                                                                                                                                                                                                                          
            <Button&nbsp;                                                                                                                                                                                                                                      
                id="content_viewer_ok"                                                                                                                                                                                                                         
                text="Ok"                                                                                                                                                                                                                                      
                press="onOkContentViewer"/>&nbsp;&nbsp;                                                                                                                                                                                                        
        </beginButton>                                                                                                                                                                                                                                         
        <ce:CodeEditor                                                                                                                                                                                                                                         
            id="editor"                                                                                                                                                                                                                                        
            type="xml"                                                                                                                                                                                                                                         
            height="600px"                                                                                                                                                                                                                                     
            editable="false"                                                                                                                                                                                                                                   
            value="{global>/xml}"                                                                                                                                                                                                                              
        />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                     
   </Dialog>                                                                                                                                                                                                                                                   
</core:FragmentDefinition>                                                                                                                                                                                                                                     