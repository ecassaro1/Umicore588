<core:FragmentDefinition                                                                                                                                                                                                                                       
   xmlns="sap.m"                                                                                                                                                                                                                                               
   xmlns:core="sap.ui.core" >                                                                                                                                                                                                                                  
   <Dialog                                                                                                                                                                                                                                                     
      title="{i18n>Message}"                                                                                                                                                                                                                                   
      contentWidth="250px"                                                                                                                                                                                                                                     
   >                                                                                                                                                                                                                                                           
      <beginButton>                                                                                                                                                                                                                                            
        <Button&nbsp;                                                                                                                                                                                                                                          
          id="popup_ok"                                                                                                                                                                                                                                        
          text="Ok"                                                                                                                                                                                                                                            
          press="onOkMessagePopup"/>&nbsp;&nbsp;                                                                                                                                                                                                               
      </beginButton>                                                                                                                                                                                                                                           
      <endButton>                                                                                                                                                                                                                                              
        <Button&nbsp;                                                                                                                                                                                                                                          
          id="popup_cancel"                                                                                                                                                                                                                                    
          text="{i18n>Cancel}"                                                                                                                                                                                                                                 
          press="onCancMessagePopup"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                     
      </endButton>                                                                                                                                                                                                                                             
      <TextArea                                                                                                                                                                                                                                                
        id="message"                                                                                                                                                                                                                                           
        value="{global>/Message}"                                                                                                                                                                                                                              
        rows="5"                                                                                                                                                                                                                                               
        cols="40"                                                                                                                                                                                                                                              
      />                                                                                                                                                                                                                                                       
   </Dialog>                                                                                                                                                                                                                                                   
</core:FragmentDefinition>                                                                                                                                                                                                                                     